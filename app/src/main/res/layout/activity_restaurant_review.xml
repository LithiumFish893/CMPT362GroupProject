<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.RestaurantReview"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.denzcoskun.imageslider.ImageSlider
            android:id="@+id/restaurant_image"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            app:layout_constraintTop_toTopOf="parent"
            app:iss_auto_cycle="true"
            app:iss_placeholder="@android:color/darker_gray"
            app:iss_error_image="@android:color/darker_gray"
            app:iss_corner_radius="5"
            app:iss_selected_dot="@drawable/default_selected_dot"
            app:iss_unselected_dot="@drawable/default_unselected_dot"
            app:iss_period="2000"/>

        <LinearLayout
            android:id="@+id/restaurant_title_and_rating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_image"
            android:orientation="vertical">

            <TextView
                android:id="@+id/restaurant_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sushi Garden"
                android:textSize="30dp" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:id="@+id/restaurant_rating"
                android:numStars="5"
                android:rating="4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/restaurant_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintTop_toBottomOf="@+id/restaurant_title_and_rating"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="3.5km"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/health_level"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Health Information"
                android:textSize="20dp"
                android:textAlignment="textEnd"
                android:layout_weight="1"/>

        </LinearLayout>

        <TableLayout
            android:id="@+id/location_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/restaurant_info"
            >

            <View android:layout_height="2dp" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorWhite">

                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_column="1"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@drawable/ic_restaurant_address"
                    android:padding="12dp" />

                <TextView
                    android:id="@+id/restaurant_review_address"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_column="2"
                    android:layout_weight="7"
                    android:gravity="center_vertical"
                    android:padding="8dp"
                    android:text="@string/restaurant_address"
                    android:textColor="@color/blackFont"
                    android:textSize="16sp" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_column="1"
                    android:layout_weight="1"
                    android:background="@color/colorSecondary"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:maxLines="1"
                    android:paddingLeft="40dp"
                    android:paddingTop="5dp"
                    android:paddingRight="40dp"
                    android:paddingBottom="5dp"
                    android:text="Reviews"
                    android:textColor="@color/colorWhite"
                    android:textSize="25sp" />
            </TableRow>
        </TableLayout>


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/review_history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_info"
            app:layout_constraintVertical_bias="0.0" />




        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/write_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_create_24"
            app:tint="@color/white"
            android:contentDescription="write review"
            android:layout_margin="15dp"
            app:layout_constraintBottom_toTopOf="@+id/review_history"
            app:layout_constraintTop_toTopOf="@+id/location_info"
            app:flow_verticalBias="1"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>